{namespace pc=Tx_Podcast_ViewHelpers}
<f:layout name="default" />
<f:section name="main">
		<title>
			{podcast.title}
		</title>           
		<link>{podcast.website.link}</link>      
		<language><f:translate key="language" /></language>
		<copyright>{podcast.copyright}</copyright>
		<f:if condition="{podcast.itunes}">
			<f:then>
		<itunes:subtitle>{podcast.subtitle}</itunes:subtitle> 
		<itunes:author>{podcast.author.name}</itunes:author>
        <itunes:owner>
			<itunes:name>{podcast.author.name}</itunes:name>
			<itunes:email>{podcast.author.email}</itunes:email>
		</itunes:owner> 
		<f:if condition="{podcast.image}">
			<f:then>         
				<itunes:image href="{f:uri.image(src:'uploads/tx_podcast/{podcast.image}', width:'600' height:'600')}" />
			</f:then>
			<f:else>                      
				<itunes:image href="{f:uri.image(src:'typo3conf/ext/podcast/Resources/Public/Icons/podcast.jpg', width:'600' height:'600')}" />				
			</f:else>
		</f:if>                 
		<f:if condition="{podcast.category}">
			<f:then>
				<itunes:category text="{podcast.category.title}">
					<itunes:category text="Gadgets"/>
				</itunes:category>
				<itunes:category text="TV &amp; Film"/>
			</f:then>
		</f:if>
			</f:then>    
			<f:else>   
		<subtitle>{podcast.subtitle}</subtitle>
			</f:else>
		</f:if> 
		<description>           
			{podcast.description}
		</description>  
		<f:if condition="{podcast.episodes}">
			<f:then>
				<f:for each="{podcast.episodes}" as="episode" reverse="false">
					<f:render partial="episode" arguments="{episode: episode, itunes: podcast.itunes}" />
				</f:for>
			</f:then>
		</f:if>        
</f:section>